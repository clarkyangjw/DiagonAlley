<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clark.mapper.AdvertisingStatusMapper">

    <select id="getAdvertisingStatus" resultType="AdvertisingStatus">
        select * from advertising_status
    </select>

    <select id="getAdvertisingStatusById" resultType="AdvertisingStatus">
        select * from advertising_status
        where id = #{id}
    </select>

    <select id="getAdvertisingStatusByName" resultType="AdvertisingStatus">
        select * from advertising_status
        where name = #{name}
    </select>

</mapper>